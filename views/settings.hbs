<div class="row card-container">
    <div class="col-md-12">
        <div class="card card-user main-card">
            <div class="card-header">
                <h5 class="card-title">Settings</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-md-5 pr-1">
                            <label>Select Intro Video: </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5 pr-1 row" style="justify-content: space-evenly;">
                            <div>
                                <input type="radio" id="intro1" name="intro" value="intro1" onselect="videoElement">
                                <label for="intro1">Intro Video 1</label>
                                <br>
                                <button width="10" class="btn btn-primary btn-round" id="intro1Btn">Preview</button>
                                <br>
                            </div>
                            <div>
                                <input type="radio" id="intro2" name="intro" value="intro2">
                                <label for="intro2">Intro video 2</label><br>
                                <button width="10" class="btn btn-primary btn-round" id="intro2Btn">Preview</button><br>
                            </div>
                            <div>
                                <input type="radio" id="intro3" name="intro" value="intro3">
                                <label for="intro3">Intro video 3</label><br>
                                <button width="10" class="btn btn-primary btn-round" id="intro3Btn">Preview</button>
                            </div>
                        </div>
                    </div>
                    <div style="text-align:center">
                        <br><br>
                        <iframe width="480px" height="370px" id="videoDiv"
                            src="http://localhost:3000/uploads/1594559477676-2019-08-25-18-27-46.mp4">

                        </iframe>
                    </div>
                    <div class="row">
                        <div class="update ml-auto mr-auto">
                            <button type="submit" class="btn btn-primary btn-round">Save Settings</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
</script>
<script>
    if (flvjs.isSupported()) {
        var videoElement = document.getElementById('videoElement');
        var flvPlayer = flvjs.createPlayer({
            type: 'flv',
            url: 'https://www.youtube.com/watch?v=j4Sqh-OXPgA'
        });
        flvPlayer.attachMediaElement(videoElement);
        flvPlayer.load();
        flvPlayer.play();
    }
</script>